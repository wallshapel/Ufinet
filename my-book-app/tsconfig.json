{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "noEmit": true,

    "jsx": "react-jsx",

    "types": ["vitest/globals", "@testing-library/jest-dom"]
  },
  "include": [
    "src",
    "vite.config.ts",
    "vitest.config.ts",
    "src/setupTests.ts",
    "src/**/*.test.ts",
    "src/**/*.test.tsx"
  ]
}
